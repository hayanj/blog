<div class="container row justify-content-center">
  <div class= "col-10">
    <%= render 'shared/errors', obj:article %>
    <%= form_with(model: article, class: "shadow p-3 mb-3 bg-black rounded justify-content-center", local: true) do |form| %>

      <div class="form-group row">
        <%= form.label :title, class: "col-2 col-form-label text-white" %>
        <div class ="col-10">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article" %>
        </div>
      </div>
      <br>
      <div class="form-group row mb-2">
        <%= form.label :description, class: "col-2 col-form-label text-white" %>
        <div class ="col-10">
          <%= form.text_area :description, rows:10, class: "form-control", placeholder: "Description of article"  %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :category, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= form.collection_select(:category_ids, Category.all, :id, :name,
          { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select" }) %>
        </div>
      </div>


      <div class="form-group row justify-content-center">
        <%= form.submit class: "btn btn-outline-light btn-lg col-3"%>
      </div>
    <% end %>
  </div>
  <div class="mb-3 text-center">
    <%= link_to "Back to articles", articles_path, class: "text-black"%>
  </div>
</div>
