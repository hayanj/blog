<h1 class="text-center mt-4">Log in</h1>
<div class="container row justify-content-center">
  <div class= "col-10">
    <%= form_with(scope: :sessions, url: login_path, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f| %>
      <div class="form-group row mb-2">
        <%= f.label :email, class: "col-2 col-form-label text-white" %>
        <div class ="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address"  %>
        </div>
      </div>

      <div class="form-group row mb-2">
        <%= f.label :password, class: "col-2 col-form-label text-white" %>
        <div class ="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"  %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "btn btn-outline-light btn-lg col-3"%>
      </div>
    <% end %>
  </div>
  <div class="mb-3 text-center">
    <%= link_to "Back to articles", articles_path, class: "text-black"%>
  </div>
</div>
